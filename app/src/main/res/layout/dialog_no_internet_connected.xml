<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_white_15sdp"
            android:elevation="@dimen/_5sdp"
            android:minHeight="@dimen/_80sdp"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            tools:ignore="UselessParent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_no_internet"
                android:tint="@color/color_0057FF"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/internet_issue"
                android:textColor="@color/color_0057FF"
                android:textSize="@dimen/txtSizeLarge" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_10sdp"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_horizontal"
                android:text="@string/please_check_your_internet"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/txtSizeNormal" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnOK"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_rounded_blue_5sdp"
                android:fontFamily="@font/poppins_medium"
                android:foreground="@drawable/ripple_rec"
                android:gravity="center"
                android:text="OK"
                android:textColor="@color/colorWhite" />


        </LinearLayout>
    </LinearLayout>
</layout>